    </changeSet>

    <changeSet author="alireza-fassih" id="addOrder-to-goods-FK">
        <addForeignKeyConstraint baseColumnNames="GOODS"
                                 baseTableName="DASH_ORDER"
                                 constraintName="fk-order-goods"
